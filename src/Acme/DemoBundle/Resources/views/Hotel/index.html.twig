{% extends 'AcmeDemoBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ 'hotel.list.title'|trans }}</h1>
        <table class="table table-striped table-condensed" span="4">
            <thead>
                <tr>
                    <th>{{ 'hotel.name'|trans }}</th>
                    <th>{{ 'hotel.stars'|trans }}</th>
                    <th>{{ 'hotel.city'|trans }}</th>
                    <th>{{ 'hotel.list.action.title'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for hotel in hotels %}
                <tr>
                    <td><a href="{{ path('_hotel_show', { 'hotel_id': hotel.id }) }}">{{ hotel.name }}</a></td>
                    <td>{{ hotel.stars }}</td>
                    <td>{{ hotel.city }}</td>
                    <td><a href="{{ path('_reservation_new', { 'hotel_id': hotel.id }) }}" class="btn btn-primary">{{ 'hotel.list.action.book'|trans }}</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}

    
    