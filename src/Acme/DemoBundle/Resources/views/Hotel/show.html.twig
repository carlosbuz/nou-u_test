{% extends 'AcmeDemoBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ hotel.name }}</h1>
    <p>{{ hotel.stars }} {{ 'hotel.stars'|trans }} <span>({{ hotel.city }})</span></p>
    
    {% if reservations %}
    <table class="table table-striped table-condensed" span="4">
        <thead>
            <tr>
                <th>{{ 'reservation.list.customer.name'|trans }}</th>
                <th>{{ 'reservation.list.customer.age'|trans }}</th>
                <th>{{ 'reservation.list.room.number'|trans }}</th>
                <th>{{ 'reservation.dateIn'|trans }}</th>
                <th>{{ 'reservation.dateOut'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.customer.name }}</td>
                <td>{{ reservation.customer.age }}</td>
                <td>{{ reservation.room.number }}</td>
                <td>{{ reservation.inDate|date("d-m-Y") }}</td>
                <td>{{ reservation.outDate|date("d-m-Y") }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>{{ 'reservation.list.none'|trans }}</p>
    {% endif %}
    <a href="{{ path('_hotel_index') }}" class="btn btn-inverse">{{ 'reservation.list.button.back'|trans }}</a>
{% endblock %}

    
    